{
  "name": "aguilita1/samplesyncapp",
  "description": "Sample Sync App is a reference implementation to demonstrate how to use Github Actions with a simple PHP CLI synchronization application.",
  "keywords": [
    "Sample PHP App",
    "React EventLoop",
    "Github Actions"
  ],
  "homepage": "https://github.com/aguilita1/SampleSyncApp",
  "license": "MIT",
  "authors": [
    {
      "name": "Daniel I. Kelley",
      "homepage": "https://github.com/aguilita1"
    }
  ],
  "config": {
      "platform": {
           "php": "8.4.1"
       }
  },
  "require": {
    "php": ">=8.4",
    "guzzlehttp/guzzle": "^7.9.2",
    "react/event-loop":"^1.5.0",
    "monolog/monolog":"^3.7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0.1",
      "phpstan/phpstan": "^2.0.2"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "prefer-stable": true,
  "minimum-stability": "stable"
}
